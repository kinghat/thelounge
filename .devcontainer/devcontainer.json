{
  "name": "The Lounge Dev",
  // "build": {
  //   "dockerfile": "Dockerfile"
  // },
  // "image":"mcr.microsoft.com/devcontainers/base:alpine",
  "image": "mcr.microsoft.com/devcontainers/typescript-node",
  // "mounts": [
  //   "type=volume,source=${localWorkspaceFolderBasename}-node_modules,target=${containerWorkspaceFolder}/node_modules"
  // ],
  "portsAttributes": {
    "9000": {
      "label": "The Lounge Dev"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "EditorConfig.EditorConfig",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "Vue.volar",
        "Vue.vscode-typescript-vue-plugin"
      ]
    }
  },
  "onCreateCommand": "sudo ln -s $(pwd)/index.js /usr/local/bin/thelounge",
  // "postStartCommand": "sudo chown node node_modules && yarn install && NODE_ENV=production yarn build"
  "postStartCommand": "yarn install && sudo chown node node_modules && NODE_ENV=production yarn build && yarn dev"
}

