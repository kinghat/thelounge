{
  "name": "The Lounge Dev",
  // "build": {
  //   "dockerfile": "Dockerfile"
  // },
  // "image":"mcr.microsoft.com/devcontainers/base:alpine",
  "image": "mcr.microsoft.com/devcontainers/typescript-node",
  "mounts": [
    "type=volume,source=${localWorkspaceFolderBasename}-node_modules,target=${containerWorkspaceFolder}/node_modules"
  ],
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      "settings": {},
      "extensions": [
        "EditorConfig.EditorConfig",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "Vue.volar",
        "Vue.vscode-typescript-vue-plugin"
      ]
    }
  },
  // "postCreateCommand": "yarn install && NODE_ENV=production yarn build && yarn dev",
  // "initializeCommand": "sudo chown node node_modules",
  // "postCreateCommand": "yarn install && NODE_ENV=production yarn build && yarn dev",
  // "postCreateCommand": "yarn install --production=false && NODE_ENV=production yarn build && yarn dev",
  // "postCreateCommand": "sudo chown node node_modules && yarn install && NODE_ENV=production yarn build && yarn dev"
  // "remoteUser": "vscode"
  "postStartCommand": "sudo chown node node_modules && yarn install"
}

