{
  "name": "The Lounge Dev",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "runArgs": ["--volume=${localEnv:HOME}${localEnv:USERPROFILE}/.thelounge:/home/node/.thelounge"],
  "extensions": [
    "dbaeumer.vscode-eslint",
    "EditorConfig.EditorConfig",
    "esbenp.prettier-vscode",
    "octref.vetur"
  ],
  "forwardPorts": [9000],
  "postStartCommand": "yarn install",
  "postAttachCommand": "yarn dev",
  "remoteUser": "node"
}
